@using CatalogoDeFilmes.Application.Models;
@model List<DiretoresModel>;

@{
    ViewData["Title"] = "Diretores";
}
<div class="d-flex justify-content-between align-items-center mb-5">

        @* Area para criacao de diretores *@
</div>


<div class="d-flex justify-content-between align-items-center mb-5">
        @foreach(var diretor in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">@diretor.Sobrenome</h2>
                        <h4 class="card-title">@diretor.PrimeiroNome</h4>
                        <p class="card-text">@diretor.Nacionalidade</p>
                        <a href="#" class="btn btn-primary">Detalhes</a>
                        <a href="#" class="btn btn-warning">Editar</a>
                        <a href="#" class="btn btn-danger">Excluir</a>
                    </div>
                </div>
            </div>
        }



</div>
